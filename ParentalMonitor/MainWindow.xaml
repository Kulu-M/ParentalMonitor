<Window x:Class="ParentalMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParentalMonitor"
        mc:Ignorable="d"
        Title="Parental Monitor" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="b_activateControl" Content="Act" HorizontalAlignment="Left" Margin="95,65,0,0" VerticalAlignment="Top" Width="75" Click="b_activateControl_Click"/>
        <Button x:Name="b_deactivateControl" Content="Deact" HorizontalAlignment="Left" Margin="346,76,0,0" VerticalAlignment="Top" Width="75" Click="b_deactivateControl_Click"/>
        <Button x:Name="b_hideWindow" Content="Hide" HorizontalAlignment="Left" Margin="95,227,0,0" VerticalAlignment="Top" Width="75" Click="b_hideWindow_Click"/>

    </Grid>
</Window>
