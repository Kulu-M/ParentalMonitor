<Window x:Class="ParentalMonitor.Views.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParentalMonitor.Views"
        mc:Ignorable="d"
        Title="Settings" Height="240" Width="200" Loaded="Window_Loaded" Closing="Window_Closing" ResizeMode="NoResize">
    <Grid>
        <ComboBox x:Name="cb_key" HorizontalAlignment="Left" Margin="10,74,0,0" VerticalAlignment="Top" Width="163"/>
        <Label x:Name="label" Content="Hotkey" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Key" HorizontalAlignment="Left" Margin="10,43,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cb_modifier" HorizontalAlignment="Left" Margin="10,163,0,0" VerticalAlignment="Top" Width="163"/>
        <Label x:Name="label2" Content="Modifier" HorizontalAlignment="Left" Margin="10,132,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
