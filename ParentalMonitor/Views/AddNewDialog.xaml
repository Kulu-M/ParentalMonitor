        <Button x:Name="b_cancel" Content="Cancel" HorizontalAlignment="Left" Margin="317,241,0,0" VerticalAlignment="Top" Width="74" Click="b_cancel_Click"/>
        <Label x:Name="label2" Content="Or choose from the List of running Processes:" HorizontalAlignment="Left" Margin="10,71,0,0" VerticalAlignment="Top"/>

    </Grid>
